# Example environment configuration
# Copy this file to .env and fill in your Azure service credentials

# Azure OpenAI Settings
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your-gpt-deployment-name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment-name
AZURE_OPENAI_MAX_TOKENS=4000
AZURE_OPENAI_TEMPERATURE=0.7

# Azure Cognitive Search Settings
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=rag-multimodal-index
AZURE_SEARCH_SEMANTIC_CONFIG=semantic-config

# Azure Document Intelligence Settings
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intelligence.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your-doc-intelligence-api-key

# Azure Computer Vision Settings
AZURE_COMPUTER_VISION_ENDPOINT=https://your-computer-vision.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_API_KEY=your-computer-vision-api-key

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SECONDS=3600

# API Settings
API_TITLE=RAG Azure AI Module
API_DESCRIPTION=Multimodal RAG service using Azure AI
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_MAX_UPLOAD_SIZE=52428800
API_CORS_ORIGINS=["*"]
API_KEY=your-optional-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Processing Settings
PROCESSING_CHUNK_SIZE=1000
PROCESSING_CHUNK_OVERLAP=200
PROCESSING_MAX_CONCURRENT_JOBS=5
PROCESSING_SUPPORTED_IMAGE_FORMATS=["jpg","jpeg","png","bmp","tiff","gif"]
PROCESSING_SUPPORTED_DOCUMENT_FORMATS=["pdf","docx","txt"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=

# Environment
ENVIRONMENT=development